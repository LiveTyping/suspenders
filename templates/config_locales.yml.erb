<%= default_locale %>:
  titles:
    application: <%= app_name.humanize %>
  <% if default_locale == 'en' %>
  date:
    formats:
      default:
        "%m/%d/%Y"
      with_weekday:
        "%a %m/%d/%y"

  time:
    formats:
      default:
        "%a, %b %-d, %Y at %r"
      date:
        "%b %-d, %Y"
      short:
        "%B %d"
  <% end %>
